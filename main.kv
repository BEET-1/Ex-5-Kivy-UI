<MainScreen>:
    #: import time __main__.time
    counter: counter
    joy_label: joy_label
    change: change
    move: move
    name: 'main'
    on_enter: root.start_joy_thread()
    # on_enter: root.animationGo()
    FloatLayout:
        size_hint: None, None

    Slider:
        id: Slider
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'
        x: root.width * 0
        y: root.height * 0.35


    DPEAButton:
        id: counter
        text: "0"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0.25, 0.6, 0.1, 0.3
        on_press: root.pressedCount()

    DPEAButton:
        id: toggle
        text: "toggle"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.25
        color: 0, 1, 0, 1
        on_press: root.motorToggle()

    ImageButton:
        id: move
        source: 'beet.jpg'
        size_hint: None, None
        pos_hint: {'left':1, 'top':0.5}
        allow_stretch: False
        keep_ratio: True
        on_press: root.admin_action()


    DPEAButton:
        id: change
        text: "On"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.75
        color: 0, 1, 0, 1



    DPEAButton:
        id:btn
        text: "I am" if btn.state == "normal" else "Awesome"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()


    SelfUpdatingLabel:
        id: sldrValue
        size_hint: None, None
        font_size: 30
        update_property: Slider.value
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    ImageButton:
        id: joy_label
        source: 'beet.jpg'
        size_hint: None, None
        center_x: root.width * 0.5
        center_y: root.height * 0.7
        allow_stretch: False
        keep_ratio: True
        on_press: root.admin_action()




